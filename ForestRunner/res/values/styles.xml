<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/dialog_button</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.Dialog.Alert">
<!--         <item name="android:fullDark">@drawable/dialog_bg_full</item> -->
<!--         <item name="android:topDark">@drawable/dialog_bg_top</item> -->
<!--         <item name="android:centerDark">@drawable/dialog_bg_middle</item> -->
<!--         <item name="android:bottomDark">@drawable/dialog_bg_bottom</item> -->
<!--         <item name="android:fullBright">@drawable/dialog_bg_full</item> -->
<!--         <item name="android:topBright">@drawable/dialog_bg_top</item> -->
<!--         <item name="android:centerBright">@drawable/dialog_bg_middle</item> -->
<!--         <item name="android:bottomBright">@drawable/dialog_bg_bottom</item> -->
<!--         <item name="android:bottomMedium">@drawable/dialog_bg_bottom</item> -->
<!--         <item name="android:centerMedium">@drawable/dialog_bg_middle</item> -->
        <item name="android:buttonStyle">@style/DialogButton</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog"></style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Theme.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>